<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/marker_info_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:background="@color/secondaryLightColor"
    android:padding="8dp">

    <TextView
        android:id="@+id/marker_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Marker Title"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <ImageView
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:id="@+id/marker_image"
        android:layout_width="match_parent"
        android:contentDescription="@string/marker_image"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ScrollView
        android:id="@+id/scrollview_description_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fillViewport="false"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical">

        <TextView
            android:id="@+id/marker_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="Here goes the description" />

    </ScrollView>

</LinearLayout>